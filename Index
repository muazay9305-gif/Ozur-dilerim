<script>
const face = document.getElementById("face");
const message = document.getElementById("message");
const scoreEl = document.getElementById("score");
const timerEl = document.getElementById("timer");
const endScreen = document.getElementById("end");
const sound = document.getElementById("sound");

let score = 0;
let time = 30;
let active = true;

const messages = [
  "TAMAM HAKLISIN ğŸ˜­",
  "BÄ°R DAHA ASLA ğŸ™ƒ",
  "ANNEM DE KIZDI AMA BU KADAR DEÄÄ°L ğŸ˜…",
  "LÃœTFEN DUR ğŸ¥²",
  "BEN MALIM ğŸ¤¡",
  "Ã–ZÃœR DÄ°LERÄ°M AÅKIM â¤ï¸",
  "KAFAM GÄ°TTÄ° ğŸ’¥",
  "SEN MÃœKEMMELSÄ°N ğŸ˜"
];

function moveFace() {
  face.style.left = Math.random() * (window.innerWidth - 200) + "px";
  face.style.top = Math.random() * (window.innerHeight - 260) + "px";
}

moveFace();

face.addEventListener("click", () => {
face.classList.remove(
  "damage-1",
  "damage-2",
  "damage-3",
  "damage-4",
  "damage-5"
);

if (score >= 3) face.classList.add("damage-1");
if (score >= 6) face.classList.add("damage-2");
if (score >= 9) face.classList.add("damage-3");
if (score >= 12) face.classList.add("damage-4");
if (score >= 15) face.classList.add("damage-5");
  if (!active) return;

  score++;
  scoreEl.textContent = "VuruÅŸ: " + score;
  message.textContent = messages[Math.floor(Math.random() * messages.length)];

  // YAMULMA ANÄ°MASYONU
  const rotate = (Math.random() * 60) - 30;
  const scaleX = 0.8 + Math.random() * 0.4;
  const scaleY = 0.8 + Math.random() * 0.4;

  face.style.transform = `rotate(${rotate}deg) scale(${scaleX}, ${scaleY})`;
  setTimeout(() => face.style.transform = "none", 120);

  // Kalp efekti
  const heart = document.createElement("div");
  heart.className = "heart";
  heart.textContent = "â¤ï¸";
  heart.style.left = face.style.left;
  heart.style.top = face.style.top;
  document.body.appendChild(heart);
  setTimeout(() => heart.remove(), 1000);

  sound.currentTime = 0;
  sound.play();

  moveFace();
});

const timer = setInterval(() => {
  time--;
  timerEl.textContent = "SÃ¼re: " + time;
  if (time <= 0) {
    clearInterval(timer);
    active = false;
    face.style.display = "none";
    endScreen.style.display = "block";
  }
}, 1000);
</script>

